<h1 class='d-flex justify-content-between align-items-center'>{{title}}
  <a href='/transaction/create' class='actionButton new'>Adicionar</a></h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Valor</th>
    <th>Tipo</th>
    <th>Ações</th>
  </tr>
  {{#each model}}
    <tr>
      <td class='text-left'>{{this.label}}</td>
      <td class='text-right'> R$ {{this.value}}</td>
      <td class='text-center'>{{this.type}}</td>
      <td class='text-center'>
        <a
          href='/transaction/edit/{{this.id}}'
          title='Editar Transação'
        >Editar</a>
        |
        <a
          href='/transaction/delete/{{this.id}}'
          title='Excluir Transação'
          onclick="return confirm('Deseja mesmo excluir esta transação')"
        >Excluir</a>
      </td>
    </tr>
  {{/each}}
</table>