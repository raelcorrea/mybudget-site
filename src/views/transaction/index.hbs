<aside class="aside">
    {{> balance incomes=balance.incomes expenses=balance.expenses total=balance.total  }}
</aside>
<section class="view">
  <header>
    <h1 class='d-flex justify-content-between align-items-center'>Minhas Transações</h1>
    <a href='/transaction/create' class='actionButton new'>Adicionar</a>
  </header>

<ul class="listaTransacoes">
  {{#each model}}
  <li class="itemTransacao">
    <div class="left">
      <header>
        <strong class="title">{{this.label}}</strong>
      </header>
      <p><span class="badge">{{this.type}}</span> <span class="date">- {{toDateString this.updatedAt}}</span></p>
    </div>
    <div class="right">
      <strong class="price">{{toCurrencyBrl this.value}}</strong>
      <div class="actionButtons">
      <a
          href='/transaction/edit/{{this.id}}'
          title='Editar Transação'
        >Editar</a>
        <a
          href='/transaction/delete/{{this.id}}'
          title='Excluir Transação'
          onclick="return confirm('Deseja mesmo excluir esta transação')"
        >Excluir</a>

      </div>
    </div>
  </li>
  {{/each}}
</ul>



</section>


